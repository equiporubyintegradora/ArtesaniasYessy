<div class="container">
  <div class="panel panel-danger">
    <div class="panel-heading">Listado de Clientes</div>
    <div class="panel-body">
      <p id="notice"><%= notice %></p>

      <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Nombre cliente</th>
            <th>Apellido paterno</th>
            <th>Apellido materno</th>
            <th>Calle</th>
            <th>Número</th>
            <th>Colonia</th>
            <th>Municipio</th>
            <th>Estado</th>
            <th>Pais</th>
            <th>Teléfono</th>
            <th>Celular</th>
            <th>Email</th>
            <th colspan="3">Acciones</th>
          </tr>
        </thead>

        <tbody>
          <% @clientes.each do |cliente| %>
            <tr>
              <td><%= cliente.nombre_cliente %></td>
              <td><%= cliente.ap_paterno %></td>
              <td><%= cliente.ap_materno %></td>
              <td><%= cliente.calle %></td>
              <td><%= cliente.numero %></td>
              <td><%= cliente.colonia %></td>
              <td><%= cliente.municipio %></td>
              <td><%= cliente.estado %></td>
              <td><%= cliente.pais %></td>
              <td><%= cliente.telefono %></td>
              <td><%= cliente.celular %></td>
              <td><%= cliente.email %></td>
              <td><%= link_to ' Mostrar', cliente, :class => 'btn btn-info glyphicon glyphicon-eye-open', :style => 'color: white' %></td>
              <td><%= link_to ' Editar', edit_cliente_path(cliente), :class => 'btn btn-success glyphicon glyphicon-edit', :style => 'color: white' %></td>
              <td><%= link_to ' Eliminar', cliente, method: :delete, data: { confirm: '¿Estas Segúro?' }, :class => 'btn btn-danger glyphicon glyphicon-remove', :style => 'color: white' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
      <br>
      <hr>
      <%= link_to ' Agregar Cliente', new_cliente_path, :class => 'btn btn-primary glyphicon glyphicon-plus', :style => 'color: white' %>
    </div>
  </div>
</div>