<div class="container">
  <h1>Lista de Empleados</h1>
  <div class="well">
    <% if !@empleado.blank? %>
        <table border="2"  class="table table-bordered">
          <tr>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Correo Electronico</th>
          </tr>

          <% @empleado.each do |e| %>
              <tr>
                <td><%= e.name %></td>
                <td><%= e.lastname %></td>
                <td><%= e.email %></td>
              </tr>
          <% end %>
        </table>
    <% else %>
        <br/>
        <h3>No hay registros</h3>
        <br/>
    <% end %>
  </div>
</div>